extends /templates/_layouts/master

block append style
    style.

        body {
            background: #FAFAFA; /* $material-color-grey-50 */
        }

        .elevation-demo-container {
            display: -ms-flexbox;
            display: flex;
            margin: auto;
            flex: 1 1 auto;
            flex-wrap: wrap;
            justify-content: space-between;
            width: 100%;
        }

        .elevation-demo-surface {
            display: -ms-inline-flexbox;
            display: inline-flex;
            justify-content: space-around;
            min-height: 15rem;
            min-width: 22rem;
            margin: 1rem;
            align-items: center;
        }

block body

    .elevation-demo-container
        - var n = 0;
            while n < 24
                - n++
                div(class="elevation-demo-surface mdc-elevation--z" + n) #{n}dp
