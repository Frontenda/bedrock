//- Globally expose mixins without output, needed for prototypes
include ../../../core/templates/mixins/icon
include ../../../core/templates/mixins/render-page-tree
include ../../../core/templates/mixins/sample

block pageVariables
    //- Use this block to append page variables in templates
    - var projectTitle = "Bedrock"

    - var htmlClass = ""
    - var bodyClass = ""

    //- Styleguide layout system
    //- Use your project's layout system for the style guide
    
    //- This is usually a grid container like .container in Bootstrap, .o-grid in an ITCSS system etc.
    - var styleguideGridClass = ""
    
    //- This is an optional child of the grid container like .row in Bootstrap
    - var styleguideGridInnerClass = ""

    //- This is a generic class of a column col-md in Bootstrap 3 (not needed in Bootstrap 4)
    - var styleguideGridCellClass = ""

    //-
        This is the sizing mechanism for the left or right columns in styleguide, e.g. col-md-3 for the left side and
        col-md-9 for the right side if your site uses 12 columns. Adjust accordingly depending on your grid system.
    - var styleguideLayoutTwoColumnsLeftClass = ""
    - var styleguideLayoutTwoColumnsRightClass = ""

    //- Styleguide classes - Buttons
    //- Style buttons like your project's buttons
    - var styleguideButtonClass = ""

    //-
        Styleguide classes - Headings
        Style headings in styleguide like your project's headings
    - var styleguideBrandClass = ""
    - var styleguideComponentGroupHeaderClass = ""
    - var styleguideSampleHeadingClass = ""
    - var styleguideComponentListingCategoryClass = ""

    - var styleguideNavListTitleClass = ""
    - var styleguideNavListClass = ""
    - var styleguideSampleClass = ""

    - var styleguideNavListItemLinkClass = ""
    - var styleguideNavListItemLinkActiveClass = ""
    - var styleguideNavListItemActiveClass = ""
    - var styleguideNavListItemClass = ""

    - var styleguideNavigationHolderClass = ""

doctype html
html(lang='en' class=htmlClass ? htmlClass : '')
    head
        meta(charset='UTF-8')
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(name="robots", content="noindex")

        title
            if moduleTitle
                | #{moduleTitle} - #{projectTitle}
            else
                | #{projectTitle}

        link(rel='stylesheet', href='/css/main.css')
        link(rel='stylesheet', href='/css/prototype.css')
        link(rel='stylesheet', href='/css/styleguide.css')

    body(class=bodyClass ? bodyClass : '')

        block body

        include ../../../core/templates/includes/prototype-nav

        = "\n"
        script(src='/js/bundle.js')
