extends /templates/_layouts/master

block body

    .mdc-layout-grid
        .mdc-layout-grid__inner
            each item in contentData.movies
                .mdc-layout-grid__cell.mdc-layout-grid__cell--span-4
                    .mdc-card
                        a.mdc-card__primary-action(href='#')
                            .mdc-card__media.mdc-card__media--16-9(style="background: url(http://placehold.it/1280x720) no-repeat; background-size: cover")
                        div(style="padding: 20px;")
                            h2.mdc-typography--headline6 #{item.name}
                            h3.mdc-typography--subtitle2 Directed by #{item.director}
                            p.mdc-typography--body2  Visit ten places on our planet that are undergoing the biggest changes today.

                        .mdc-card__actions
                            .mdc-card__action-buttons
                                button.mdc-button.mdc-card__action.mdc-card__action--button View trailer
                            .mdc-card__action-icons
                                button.mdc-icon-button.material-icons.mdc-card__action.mdc-card__action--icon(data-mdc-ripple-is-unbounded='', aria-pressed='false' aria-label='Add to favorites' title='Add to favorites' data-toggle-on-content='favorite' data-toggle-on-label='Remove from favorites' data-toggle-off-content='favorite_border' data-toggle-off-label='Add to favorites') favorite_border
                                button.mdc-icon-button.material-icons.mdc-card__action.mdc-card__action--icon(data-mdc-ripple-is-unbounded='', title='More options') more_vert
